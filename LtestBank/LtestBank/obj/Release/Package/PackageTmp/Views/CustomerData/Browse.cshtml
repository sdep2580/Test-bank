@model IEnumerable<LtestBank.Models.CustomerData>

@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Browse</h2>

@using (Html.BeginForm("Browse", "CustomerData", FormMethod.Get))
{
    <p>
        身分證字號: @Html.TextBox("CustomerNo")
        <input type="submit" value="搜尋" />
    </p>
}

<p>
    @Html.ActionLink("新增一個帳戶", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AMT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SignUpDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AMT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SignUpDate)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.CustomerId }) |
            @Html.ActionLink("詳細資料", "Detail", new { id=item.CustomerId }) |
            @Html.ActionLink("刪除", "Delete", new { id=item.CustomerId })
        </td>
    </tr>
}

</table>
